<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ContainerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/main_padding_top</item>
        <item name="android:paddingLeft">@dimen/main_padding_sides</item>
        <item name="android:paddingRight">@dimen/main_padding_sides</item>
        <item name="android:paddingBottom">@dimen/main_padding_bottom</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:layout_weight">1</item>
        <item name="backgroundTint">@color/yp_white</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">@color/yp_black</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
    </style>

    <style name="LayoutSettingsStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">@dimen/list_item_padding</item>
        <item name="android:paddingBottom">@dimen/list_item_padding</item>
    </style>

    <style name="NavigationArrowIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_arrow</item>
        <item name="tint">@color/true_black_day_true_white_night</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:scaleType">center</item>
        <item name="android:paddingTop">@dimen/icon_padding</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="TextSettingsStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/second_text_size</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/true_black_day_true_white_night</item>
        <item name="android:fontWeight">@dimen/font_weight_400</item>
    </style>

    <style name="ImageSettingsStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">center</item>
        <item name="android:gravity">end</item>
        <item name="android:paddingEnd">@dimen/icon_padding_right</item>
        <item name="tint">@color/grey2_day_true_white_night</item>
    </style>

    <style name="NavigationText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:textColor">@color/true_black_day_true_white_night</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="TextSearchStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/search_shape</item>
        <item name="android:drawableStart">@drawable/ic_search_grey</item>
        <item name="android:textColorHint">@color/yp_text_gray</item>
        <item name="android:maxLines">1</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="IconSearchStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:background">@color/yp_light_gray</item>
        <item name="android:src">@drawable/ic_clear</item>
    </style>

    <style name="ArtistTextStyle">
        <item name="android:textSize">@dimen/artist_text_size</item>
        <item name="android:textColor">@color/true_black_day_true_white_night</item>
        <item name="fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="TextErrorSearchStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/error_text_size</item>
        <item name="android:layout_marginBottom">@dimen/error_item_margin</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="RefreshButton" parent = "Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="cornerRadius">54dp</item>
        <item name="fontWeight">500</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textColor">@color/yp_white</item>
    </style>

    <style name="TextHistorySearchStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">19sp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColor">@color/true_black_day_true_white_night</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="ThemeSwitcher">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/list_item_padding</item>
        <item name="android:paddingBottom">@dimen/list_item_padding</item>
        <item name="android:text">@string/theme</item>
        <item name="android:textSize">@dimen/second_text_size</item>
        <item name="thumbTint">@color/yp_text_gray</item>
        <item name="trackTint">@color/yp_light_gray</item>
    </style>

    <style name="IconPlayerStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">54dp</item>
    </style>

    <style name="ArrowBackStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/arrow_back</item>
        <item name="navigationIcon">@drawable/ic_arrow</item>
    </style>

    <style name="PlayerPlayButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:contentDescription">@string/album_cover</item>
        <item name="android:src">@drawable/ic_player_play</item>
    </style>

    <style name="MainTextPlayerStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/true_black_day_true_white_night</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="SecondaryTextPlayerStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="MediaActivityTabLayout">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="NotFoundTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">?android:attr/textColor</item>
    </style>

    <style name="MediaImageStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">60dp</item>
        <item name="layout_constraintVertical_bias">0.1</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintVertical_chainStyle">packed</item>
    </style>

    <style name="BottomNavigationView">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/black_day_white_night</item>
    </style>

    <style name="BottomNavigationStyle" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:background">@drawable/background_bottom_nav</item>
    </style>

</resources>