<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ContainerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/main_padding_top</item>
        <item name="android:paddingLeft">@dimen/main_padding_sides</item>
        <item name="android:paddingRight">@dimen/main_padding_sides</item>
        <item name="android:paddingBottom">@dimen/main_padding_bottom</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:layout_weight">1</item>
        <item name="backgroundTint">@color/yp_white</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">@color/yp_black</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
    </style>

    <style name="LayoutSettingsStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">@dimen/list_item_padding</item>
        <item name="android:paddingBottom">@dimen/list_item_padding</item>
    </style>

    <style name="NavigationArrowIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_arrow</item>
        <item name="tint">?android:attr/textColorPrimary</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:scaleType">center</item>
        <item name="android:paddingTop">@dimen/icon_padding</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="TextSettingsStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/second_text_size</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:fontWeight">@dimen/font_weight_400</item>
    </style>

    <style name="ImageSettingsStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">center</item>
        <item name="android:gravity">end</item>
        <item name="android:paddingEnd">@dimen/icon_padding_right</item>
        <item name="tint">?android:attr/solidColor</item>
    </style>

    <style name="NavigationText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="TextSearchStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/search_shape</item>
        <item name="android:drawableStart">@drawable/ic_search_grey</item>
        <item name="android:textColorHint">@color/yp_text_gray</item>
        <item name="android:maxLines">1</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="IconSearchStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:background">@color/yp_light_gray</item>
    </style>
</resources>