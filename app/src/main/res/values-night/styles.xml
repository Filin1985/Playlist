<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ArtistTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/artist_text_size</item>
        <item name="android:textColor">@color/yp_white</item>
        <item name="fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="ImageSettingsStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">center</item>
        <item name="android:gravity">end</item>
        <item name="android:paddingEnd">@dimen/icon_padding_right</item>
        <item name="tint">@color/yp_white</item>
    </style>

    <style name="TextSearchStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/search_shape</item>
        <item name="android:drawableStart">@drawable/ic_search_black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLines">1</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="IconSearchStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:background">@color/yp_light_gray</item>
        <item name="android:src">@drawable/ic_clear_black</item>
    </style>

    <style name="TextErrorSearchStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/error_text_size</item>
        <item name="android:layout_marginBottom">@dimen/error_item_margin</item>
        <item name="android:textColor">@color/yp_white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="RefreshButton" parent = "Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="cornerRadius">54dp</item>
        <item name="fontWeight">500</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/yp_white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ThemeSwitcher">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/list_item_padding</item>
        <item name="android:paddingBottom">@dimen/list_item_padding</item>
        <item name="android:text">@string/theme</item>
        <item name="android:textSize">@dimen/second_text_size</item>
        <item name="thumbTint">@color/yp_blue_light</item>
        <item name="trackTint">@color/yp_blue</item>
    </style>
</resources>